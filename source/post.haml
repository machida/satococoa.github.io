!!! 5
%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: 'viewport', content: "width=device-width, initial-scale=1.0"}
    %meta{content: "IE=edge;chrome=1", 'http-equiv' => "X-UA-Compatible"}
    = stylesheet_link_tag 'application'
    %title
      satococoa's blog#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
  %body
    .global_header
      %h1
        = link_to "satococoa's blog", '/'

    #main{role: "main"}
      .article
        .meta
          .published_at
            = current_article.date.strftime('%Y-%m-%d')
            = current_article.date.strftime('%H:%M')
          %ul.tags
            - current_article.tags.each do |tag|
              %li
                = link_to tag, tag_path(tag)
        .main
          %h2
            = link_to current_article.title, current_article
          = yield

    .global_footer
      .recent
        %h2 Recent Articles
        %ul
          - blog.articles[0...5].each do |article|
            %li
              = link_to article.title, article
      .tags
        %h2 Tags
        %ul
          - blog.tags.each do |tag, articles|
            %li
              = link_to tag, tag_path(tag)
              (#{articles.size})
      .by_year
        %h2 By Year
        %ul
          - blog.articles.group_by {|a| a.date.year }.each do |year, articles|
            %li
              = link_to year, blog_year_path(year)
              (#{articles.size})
